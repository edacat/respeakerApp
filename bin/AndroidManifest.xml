<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iqss.respeakerapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iqss.respeakerapp.MenuActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.RecordActivity"
            android:label="@string/title_activity_record"
            android:parentActivityName="com.iqss.respeakerapp.MenuActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iqss.respeakerapp.MenuActivity" />
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.RespeakActivity"
            android:label="@string/title_activity_respeak"
            android:parentActivityName="com.iqss.respeakerapp.MenuActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iqss.respeakerapp.MenuActivity" />
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.TranscribeActivity"
            android:label="@string/title_activity_transcribe"
            android:parentActivityName="com.iqss.respeakerapp.MenuActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iqss.respeakerapp.MenuActivity" />
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.FileExplorerActivity"
            android:label="@string/title_activity_file_explorer"
            android:screenOrientation="portrait"
            android:parentActivityName="com.iqss.respeakerapp.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iqss.respeakerapp.MenuActivity" />
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.ReviewActivity"
            android:label="@string/title_activity_review"
            android:screenOrientation="portrait"
            android:parentActivityName="com.iqss.respeakerapp.FileExplorerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iqss.respeakerapp.FileExplorerActivity" />
        </activity>
        <activity
            android:name="com.iqss.respeakerapp.TimeStretchActivity"
            android:label="@string/title_activity_time_stretch" >
        </activity>
    </application>

</manifest>